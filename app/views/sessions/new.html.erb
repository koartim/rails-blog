<% provide(:title, 'Log in') %>

<h1> Log in </h1>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_with(url: login_path, scope: :session) do |s| %>

            <%= s.label :email %>
            <%= s.email_field :email, class: 'form-control' %>

            <%= s.label :password %>
            <%= s.password_field  :password, class: 'form-control' %>

            <%= s.submit "Log in", class: "btn btn-primary" %>

        <% end %>
        <p>New here? <%=  link_to "Sign up!", signup_path %></p>
    </div>
</div>